<div class="tasks-header">
  <%= image_tag 'header.png' %>
  <div class="title"><h1>My Tasks</h1></div>
</div>
<div class="tasks-container">
  <p>All my tasks:</p>
  <% @tasks.each do |task| %>
    <p><% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    <%= link_to task.title, task_path(task), class: 'task' %>
    <%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' do %>
      <i class="far fa-trash-alt"></i>
    <% end %></p>
  <% end %>
  <p class="add-button"><%= link_to '+ Add New Task', new_task_path %></p>
</div>
